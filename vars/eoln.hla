program eol;
#include ("stdlib.hhf")

// BEGIN
begin eol;
	stdout.put ("Enter a short line of text: ");
	stdin.flushInput ();
	repeat
		stdin.getc ();
		stdout.putc (al);
		stdout.put ("=0x", al, " ");
	until (stdin.eoln ());

// END
end eol;

